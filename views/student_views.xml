<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student Form View -->
    <record id="view_student_student_form" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Student" js_class="student_form_greet">
                <header>
                    <button name="action_greet_js" string="Greet (JS)" type="object" class="oe_highlight"/>
                    <button name="action_greet_python" string="Greet (Python)" type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Student Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="dob"/>
                            <field name="age" readonly="1" force_save="1"/>


                            <field name="gender"/>
                            <field name="admission_date"/>
                        </group>

                        <group>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Address Information" name="address_info">
                            <group>
                                <field name="address"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Student Tree View -->
    <record id="view_student_student_tree" model="ir.ui.view">
        <field name="name">student.student.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="admission_date"/>
                </tree>
        </field>
    </record>

    <!-- Student Search View -->
    <record id="view_student_student_search" model="ir.ui.view">
        <field name="name">student.student.search</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <search string="Search Students">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Students -->
    <record id="action_student_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_student_student_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student!
            </p>
        </field>
    </record>

    <!-- Top Menu -->
    <menuitem id="menu_student_root"
              name="Student Management"
              sequence="10"/>

    <!-- Sub Menu -->
    <menuitem id="menu_student_list"
              name="Students"
              parent="menu_student_root"
              action="action_student_student"
              sequence="20"/>

    <!-- Dashboard Menu -->
    <record id="action_student_dashboard" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">student_dashboard_action</field>
    </record>

    <menuitem id="menu_student_dashboard"
              name="Dashboard"
              parent="menu_student_root"
              action="action_student_dashboard"
              sequence="10"/>
</odoo>
