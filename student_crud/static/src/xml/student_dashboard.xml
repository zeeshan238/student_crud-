<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="student_crud.StudentDashboard">
        <div class="o_student_dashboard h-100 overflow-auto p-4 bg-light">
            <t t-if="state.loading">
                <div class="d-flex align-items-center justify-content-center h-100">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="container-fluid">
                <!-- Header -->
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800 fw-bold">Student Admissions Dashboard</h1>
                </div>

                <!-- KPI Cards -->
                <div class="row">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2 border-0 rounded-4">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Total Students</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><t t-esc="state.totalStudents"/></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fa fa-users fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2 border-0 rounded-4">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            New Admissions Today</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><t t-esc="state.newAdmissionsToday"/></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fa fa-calendar fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="row">
                    <!-- Gender Chart -->
                    <div class="col-xl-4 col-lg-5">
                        <div class="card shadow mb-4 border-0 rounded-4">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-0 rounded-top-4">
                                <h6 class="m-0 font-weight-bold text-primary">Gender Distribution</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-pie pt-4 pb-2" style="height: 300px;">
                                    <canvas t-ref="genderChartRef"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Age Chart -->
                    <div class="col-xl-8 col-lg-7">
                        <div class="card shadow mb-4 border-0 rounded-4">
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white border-0 rounded-top-4">
                                <h6 class="m-0 font-weight-bold text-primary">Students by Age</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-bar" style="height: 300px;">
                                    <canvas t-ref="chartRef"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Admissions Table -->
                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <div class="card shadow mb-4 border-0 rounded-4">
                            <div class="card-header py-3 bg-white border-0 rounded-top-4">
                                <h6 class="m-0 font-weight-bold text-primary">Recent Admissions</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                                        <thead class="bg-light">
                                            <tr>
                                                <th>Name</th>
                                                <th>Admission Date</th>
                                                <th>Gender</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.recentAdmissions" t-as="student" t-key="student.id">
                                                <tr>
                                                    <td><t t-esc="student.name"/></td>
                                                    <td><t t-esc="student.admission_date || 'N/A'"/></td>
                                                    <td><t t-esc="student.gender"/></td>
                                                    <td>
                                                        <button class="btn btn-sm btn-outline-primary rounded-pill px-3" t-on-click="() => this.onStudentClick(student.id)">
                                                            View Details
                                                        </button>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div> <!-- container-fluid -->
            </t>
        </div>
    </t>
</templates>
